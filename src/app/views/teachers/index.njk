{% extends "layout.njk" %}

{% block content %}

<div class="card table-container">
  <a href="/teachers/create">Novo</a>
  <table width="100%">

    <thead>
      <tr>
        <th>Instrutor</th>
        <th>Acompanhamento</th>
        <th>Alunos</th>
        <th>Ação</th>
      </tr>
    </thead>

    <tbody>
      {% for teacher in teachers %}
      <tr>
        <td>
          <span style="background-image: url({{ teacher.avatar_url }})"></span>
          {{teacher.name}}
        </td>

        <td id="acompanhamento">
          {% for subject in teacher.subjects %}
          <div>{{ subject }}</div>
          {% endfor %}
        </td>

        <td>{{ teacher.total_students }}</td>

        <td>
          <a href="/teachers/{{ teacher.id }}">Ir para</a>
        </td>
      </tr>
      {% endfor %}
    </tbody>

  </table>
</div>

{% endblock %}